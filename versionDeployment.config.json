[
    {
        "inputFilesPattern": ["global.json", "global.development.json"],
        "searchInPath": ["config"],
        "searchForPattern": "\"version\": \"(.*?)\",",
        "replaceWith": "\"version\": \"${version}\",",
        "isVersionReplaceSource": true
    },
    {
        "inputFilesPattern": ["index.html"],
        "searchInPath": ["."],
        "searchForPattern": "\\?ver=.*?\"",
        "replaceWith": "?ver=${version}\""
    }
]